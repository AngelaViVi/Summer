<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.summer.anna.entity.SpringMvcUserEntity" table="spring_mvc_user" schema="Summer">
        <id name="id">
            <column name="id" sql-type="int(11)"/>
        </id>
        <property name="firstName">
            <column name="firstName" sql-type="varchar(32)" length="32" not-null="true"/>
        </property>
        <property name="lastName">
            <column name="lastName" sql-type="varchar(32)" length="32" not-null="true"/>
        </property>
        <property name="password">
            <column name="password" sql-type="varchar(32)" length="32" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>