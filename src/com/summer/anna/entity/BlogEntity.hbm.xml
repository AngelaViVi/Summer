<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.summer.anna.entity.BlogEntity" table="blog" schema="Summer">
        <id name="blogId">
            <column name="blogID" sql-type="smallint(6)"/>
        </id>
        <property name="blogText">
            <column name="blogText" sql-type="mediumtext" not-null="true"/>
        </property>
        <property name="likeNum">
            <column name="likeNum" sql-type="int(11)" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>