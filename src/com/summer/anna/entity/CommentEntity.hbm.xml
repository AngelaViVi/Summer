<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.summer.anna.entity.CommentEntity" table="comment" schema="Summer">
        <id name="commentId">
            <column name="commentID" sql-type="smallint(6)"/>
        </id>
        <property name="commentText">
            <column name="commentText" sql-type="text"/>
        </property>
    </class>
</hibernate-mapping>